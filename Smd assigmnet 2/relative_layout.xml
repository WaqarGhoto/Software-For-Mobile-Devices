<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/EiditTxtview12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/EiditTxtview2"
        android:layout_alignStart="@+id/EiditTxtview2"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Email"
     

        />


    <EditText
        android:id="@+id/EiditTxtview22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/EiditTxtview1"
        android:layout_alignStart="@+id/EiditTxtview1"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Password"
     

        />


    <TextView
        android:id="@+id/Txtview12"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/Radiogroup12"
        android:layout_toStartOf="@id/Radiogroup12"
        android:text="Gender: "
        android:textSize="16sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/Radiogroup12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp" >

    <RadioButton
        android:id="@+id/Radio12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male" />

    <RadioButton
        android:id="@+id/Radio22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female" />

    <RadioButton
        android:id="@+id/Radio32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neutral" />

</RadioGroup>


    <CheckBox
        android:id="@+id/Checkbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        android:text="Terms and Conditions"
        android:layout_above="@+id/SignUp2"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/SignUp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignUpForm"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textStyle="bold"
       />



</RelativeLayout>